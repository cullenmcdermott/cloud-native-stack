apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: cns-bundle
  namespace: argocd
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  project: default
  source:
    # Replace with your Git repository URL
    repoURL: <YOUR_GIT_REPO>
    targetRevision: HEAD
    path: argocd
    directory:
      recurse: false
  destination:
    server: https://kubernetes.default.svc
    namespace: argocd
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
