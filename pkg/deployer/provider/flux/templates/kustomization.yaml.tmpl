apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: cns-bundle
  namespace: flux-system
spec:
  interval: 10m
  path: ./
  prune: true
  sourceRef:
    kind: GitRepository
    name: cns-bundle
    namespace: flux-system
  healthChecks:
    - apiVersion: apps/v1
      kind: Deployment
      namespace: gpu-operator
      name: gpu-operator
  timeout: 5m
